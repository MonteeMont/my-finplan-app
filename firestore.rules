rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // This rule matches *any* document in the 'budget' collection
    match /budget/{budgetId} {

      // Allow read ONLY IF the user is logged in
      // AND their UID matches the 'uid' field inside the document.
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
      
      // Allow create ONLY IF the user is logged in
      // AND the new document they are creating has a 'uid' field
      // that matches their own.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      
      // Allow update/delete ONLY IF they own the document.
      allow update, delete: if request.auth.uid == resource.data.uid;
    }
  }
}